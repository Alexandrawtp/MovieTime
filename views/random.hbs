<div class="randomMovies">
  {{#each movies}}
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="hovereffect">
      <img class="img-responsive" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="poster">
      <div class="overlay">
        <div>
          <button type="button" id="btnAdd" onclick="addToList({{id}})"><img src="/images/plus.svg" alt="plus"></button>
          <p class="details">{{overview}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

