<div class="background-ticket">
    {{> navbar_logout }}

    <div class="content">
        <div class="card">
            <div class="main">
                <p class="sign" align="center">Ready to watch ?</p>
                <form action="/login" method="POST" class="form1">
                    <input class="un " name="username" type="name" align="center" placeholder="Username">
                    <input class="pass" name="password" type="password" align="center" placeholder="Password">
                    <button type="submit" class="submit" align="center">Login</button>
                    {{#if msg}}
                    <div class="error">{{msg}}</div>
                    {{/if}}
            </div>

        </div>
    </div>
</div>