
<div class="background-ticket">
    {{> navbar_logout }}

    <div class="content">
        <div class="card">
            <div class="main">
                <p class="sign" align="center">Join us </p>
                <form action="/sign-up" method="POST" class="form1">
                    <input name="username" type="name" class="un " align="center" placeholder="Username">
                    <input name="email" type="name" class="un " align="center" placeholder="Email">
                    <input name="password" type="password"class="pass"  align="center" placeholder="Password">
                    <button type="submit" class="submit" align="center">Sign-up</button>
                    {{#if msg}}
                    <div class="error">{{msg}}</div>
                    {{/if}}
            </div>
        </div>
    </div>
</div>