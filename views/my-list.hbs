<div class="background-ticket">
  <nav>
    <ul class="nav justify-content-between">
      <div id="logo">MovieTime</div>
      <div id="icons">
        <li class="nav-item">
          <img src="images/house.svg" alt="home" class="icon">
          <a class="nav-link active" href="/home">Home</a>
        </li>
        <li class="nav-item">
          <img src="images/people.svg" alt="people" class="icon">
          <a class="nav-link active" href="/groups">Groups</a>
        </li>
        <li class="nav-item">
          <img src="images/heart.svg" alt="heart" class="icon">
          <a class="nav-link" href="/my-list">My List</a>
        </li>
        <li class="nav-item">
          <img src="images/person.svg" alt="profile" class="icon">
          <a class="nav-link" href="/profile">Profile</a>
        </li>
        <li class="nav-item">
          <img src="images/logout.svg" alt="profile" class="icon">
          <a class="nav-link" href="/logout">Log out</a>
        </li>
      </div>
    </ul>
  </nav>

  <div class="randomMovies">
    {{#each movies}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <div class="hovereffect">
        <img class="img-responsive card-img-top" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="poster">
        <div class="overlay">
          <h2>{{title}}</h2>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>