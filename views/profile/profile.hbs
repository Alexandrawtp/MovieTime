<div class="background-ticket">
  <div>
    {{> navbar }}
  </div>
  <div class="profileTitle">
    <h1>Profile informations</h1>
  </div>
  <div id="profile">
    <div class="pictureProfile">
      <img class="images" src="{{user.profilePic}}" alt="">
    </div>
    <div class="presentation">
      <h3 class="subTitle">My information</h3>
      <p>{{user.username}} <br> {{user.email}}</p>
    </div>
    <div class="bio">
      <h3 class="subTitle">Bio</h3>
      <p>{{user.bio}}</p>
    </div>
  </div>
  <div class="buttonEdit">
    <a class="editLink"href="/profile/{{user._id}}/edit">EDIT</a>
  </div>
</div>