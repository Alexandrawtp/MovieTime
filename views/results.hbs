<div class="background-ticket">
    {{> navbar }}

    {{#if msg}}
    <div class="add-to-list-msg">{{msg}}</div>
    {{/if}}

    <div>Added to your list !</div>

    <div class="randomMovies">
        {{#each movies}}
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="hovereffect">
                <img class="img-responsive" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="poster">
                <div class="overlay">
                    <div>
                        <button type="button" id="btnAdd" onclick="addToList({{id}})"><img src="/images/plus.svg"
                                alt="plus"></button>
                        <p>{{overview}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/js/add_list.js"></script>